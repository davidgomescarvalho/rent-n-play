<div class="container">

  <h1 class="text-center ">Instrument</h1>

  <h3><strong><%=  @instrument.title %></strong></h3>

<%= image_tag @instrument.photo, alt: @instrument.title if @instrument.photo.present? %>

  <p class="card-body my-5"><%= @instrument.body %></p>

  <p class=""><strong>Owner</strong>: <%= @instrument.user.email %></p>

  <p><strong>Category</strong>: <%= @instrument.category %></p>

  <p><strong>Location</strong>: <%= @instrument.location %></p>

  <p><strong>Availability</strong>: <%= @instrument.availability %></p>

  <p><strong>Price</strong>: <%= @instrument.price %> <i class="fa-solid fa-euro-sign"></i></p>

<%= link_to 'Edit', edit_instrument_path(@instrument), class:"btn btn-primary" %>
<%= link_to 'Back', instruments_path, class:"btn btn-flat" %>
<%= link_to 'Delete', instrument_path(@instrument), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
</div>
