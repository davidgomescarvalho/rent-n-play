<div class="container">
  <div class="text-center my-5">
    <h1><u>Liste des instruments</u></h1>
  </div>
  <div class="flex-inline">
    <%= link_to "Add your Instrument", new_instrument_path, class: "btn btn-primary my-3" %>
  </div>
  <div class="row row-cols-3 gy-2">
    <% @instruments.each do |instrument| %>
      <div class="col">
        <div class="card">
          <img src="https://source.unsplash.com/300x300?instrument,<%= instrument.title %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= instrument.title %></h5>
            <p><strong>Category</strong>: <%= instrument.category %></p>
            <p><strong>Location</strong>: <%= instrument.location %></p>
            <p><strong>Availability</strong>: <%= instrument.availability %></p>
            <p><strong>Price</strong>: <%= instrument.price %> <i class="fa-solid fa-euro-sign"></i></p>
            <p><strong>Owner</strong>: <%= instrument.user.first_name %> <%= instrument.user.last_name %></p>

            <%= link_to 'Show Instrument', instrument_path(instrument), class:"btn btn-primary p- " %>
            <%= link_to 'Edit', edit_instrument_path(instrument), class:"btn btn-secondary" %>
            <%= link_to 'Delete', instrument_path(instrument), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
